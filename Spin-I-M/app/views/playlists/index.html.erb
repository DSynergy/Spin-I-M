<%= render "/layouts/nav_bar" %>

<div class="cards">
<% @playlists.each do |playlist| %>

  <div class="card">
    <a href="/playlists/<%=playlist.id %>">
      <div class="card-image">
        <%= image_tag(playlist.image_url) %>
      </div>

      <div class="card-header">
        <%= playlist.name %>
      </div>

      <div class="card-copy">
        <p><%#playlist.description %></p>
      </div>
    </a>
  </div>

<% end %>
</div>
