<%= render "/layouts/nav_bar" %>

<h1><%= @playlist.name %></h1>

<object height="81" width="100%" id="myPlayer" classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000">
  <param name="movie" value="http://player.soundcloud.com/player.swf?url=<%=session[:queue].first%>&enable_api=true&object_id=myPlayer"></param>
  <param name="allowscriptaccess" value="always"></param>
  <embed allowscriptaccess="always" height="81" src="http://player.soundcloud.com/player.swf?url=<%=session[:queue].first%>&enable_api=true&object_id=myPlayer" type="application/x-shockwave-flash" width="100%" name="myPlayer"></embed>
</object>

<h3>Current Chat</h3>
<div id="messages">
</div>

<p>
  <%= text_area_tag(:message, nil, size: "60x3", id: "text_box", placeholder: "Keep it classy...") %>
</p>

<p>
<button id="be_heard" input[type="submit"]>Be Heard!</button>
</p>

  <h3>Voting/Queueing</h3>

  <% @songs.each do |song| %>
    <div class="voting">
      <div class="breadcrumb" id="breadcrumb-<%= song.id %>" style="margin: 14px;">
        <a href="#" class="increasePopularity" data-id="<%= song.id %>"> <%= image_tag("Thumb_up.png", size: "45") %></a>
        <a href="#" class="decreasePopularity" data-id="<%= song.id %>"><%= image_tag("downvotehand.png", size: "45") %></a>
      </div>
    </div>
    <ul class="bullets">
      <div class="row">
        <li class="bullet">
          <div class="bullet-icon bullet-icon-1">
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_2.png
      " alt="">
          </div>

          <div class="bullet-content">
              <div class="info ">
                <h2><%= song.artist %> : <%= song.title %> </h2>
              </div>
              <div id="song-score-<%= song.id %>" class="popularity-count">
                <h2>Popularity: <%= song.popularity %></h2>
              </div>
          </div>

        </li>
      </div>
    </ul>
  <% end %>
