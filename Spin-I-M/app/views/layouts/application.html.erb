<!DOCTYPE html>
<html>
<head>
  <title>SpinIM</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container-fluid">

    <div class="messages">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "flash-#{name}" %>
      <% end %>
    </div>

    <%= yield %>

  </div>

</body>
</html>
